<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="MainActivity">

    <LinearLayout
        android:background="@drawable/mainb"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/test1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">



            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/main_name"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/profile_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:background="@drawable/btnpro" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/main_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/main_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/main_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_connected"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:background="@drawable/btnble"
        android:visibility="visible" />

        <Button
        android:id="@+id/btn_connect"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
            android:layout_weight="0.5"
        android:background="@drawable/btnbleon" />

        <Button
            android:layout_weight="0.5"
            android:visibility="gone"
            android:background="@drawable/btnsen"
            android:id="@+id/sensing_btn"
            android:layout_width="wrap_content"
            android:layout_height="160dp" />

    </LinearLayout>

    <Button
        android:id="@+id/gps_btn"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:background="@drawable/btngps" />


    <Button
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:background="@drawable/btnset" />

</LinearLayout>


