<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/profile_backg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


        <Button
            android:id="@+id/finish_btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/backbtn" />

    </LinearLayout>

    <TextView
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="사용자 정보 입력"
        android:textColor="#000000"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_margin="40dp"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TableRow>
            <TextView
                android:gravity="right"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 :" />

            <EditText
                android:textColor="#000000"
                android:id="@+id/input_name"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:hint="이름을 작성해주세요"
                android:maxLength="50"
                android:padding="5dp"
                android:singleLine="true" />
        </TableRow>



        <TableRow>
            <TextView
                android:gravity="right"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혈액형 :" />
            <EditText
                android:textColor="#000000"
                android:id="@+id/input_bloodtype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="혈액형을 작성해주세요"
                android:maxLength="50"
                android:padding="5dp"
                android:layout_span="2"
                android:singleLine="true"/>
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="right"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키 :" />
            <EditText
                android:textColor="#000000"
                android:layout_span="2"
                android:id="@+id/input_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="키를 작성해주세요"
                android:maxLength="50"
                android:padding="5dp"
                android:singleLine="true"/>
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="right"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몸무게 :" />

            <EditText
                android:textColor="#000000"
                android:layout_span="2"
                android:id="@+id/input_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="몸무게를 작성해주세요"
                android:maxLength="50"
                android:padding="5dp"
                android:singleLine="true"/>
        </TableRow>


        <TableRow>
            <TextView
                android:gravity="right"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이 :" />

            <EditText
                android:textColor="#000000"
                android:layout_span="2"
                android:id="@+id/input_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="나이를을 작성해주세요"
                android:maxLength="50"
                android:padding="10dp"
                android:singleLine="true"/>
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="right"
                android:textSize="10pt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="특이사항 :"
                android:layout_span="1"/>
            <EditText
                android:textColor="#000000"
                android:layout_span="2"
                android:id="@+id/input_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="특이 사항을 작성해주세요"
                android:padding="10dp"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/finish_btn2"
            android:text="취 소"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/input_btn"
            android:text="입 력"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

        </LinearLayout>

